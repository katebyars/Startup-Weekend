{{#partial "content"}}

    {{#if editEvent}}
        <h1>Edit this Event!</h1>
        <form action="/events/{{editEvent.id}}/update" method="post">
            <label for="content">Edit this events's name and description</label>
            <input id="content" name="content" type="text" value="{{editPost.content}}">

    {{else}}
    <h1>Add a new Event!</h1>

    <form action="/events/new" method="post">
        <label for="name">Event Name</label>
        <input id="description" name="description" type="text">

    {{/if}}
        <button type="submit" class="btn btn-default">Create my Event</button>
    </form>
{{/partial}}

